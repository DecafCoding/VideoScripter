@using VideoScripter.Features.Videos.Models

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Search YouTube Videos</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for videos..."
                       @bind="searchTerm" @bind:event="oninput" @onkeydown="HandleKeyDown" />
                <button class="btn btn-primary" @onclick="SearchVideos" disabled="@(isSearching || string.IsNullOrWhiteSpace(searchTerm))">
                    @if (isSearching)
                    {
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                    }
                    else
                    {
                        <i class="bi bi-search"></i>
                    }
                    Search
                </button>
            </div>
            <div class="form-text">
                Enter keywords to find videos. For better results, try adding your topic.
            </div>
        </div>

        @if (!string.IsNullOrEmpty(searchErrorMessage))
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle"></i> @searchErrorMessage
            </div>
        }

        @if (isFirstSearch)
        {
            <div class="text-center p-4">
                <i class="bi bi-camera-video display-4 text-muted"></i>
                <p class="text-muted mt-2">Search for videos to add to your project</p>
            </div>
        }
        else if (isSearching)
        {
            <div class="d-flex justify-content-center p-4">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Searching videos...</span>
                </div>
            </div>
        }
        else if (searchResults.Count == 0)
        {
            <div class="text-center p-4">
                <i class="bi bi-emoji-frown display-4 text-muted"></i>
                <p class="text-muted mt-2">No videos found. Try a different search term.</p>
            </div>
        }
        else
        {
            <div class="video-grid">
                @foreach (var video in searchResults)
                {
                    var isVideoInProject = ExistingVideoIds.Contains(video.Id);

                    <div class="video-card @(video.IsSelected ? "selected" : "") @(isVideoInProject ? "in-project" : "")"
                         @onclick="() => SelectVideo(video)">
                        <div class="video-thumbnail">
                            <img src="@video.ThumbnailUrl" alt="@video.Title" loading="lazy" />
                            <span class="video-duration">@video.FormattedDuration</span>
                            @if (isVideoInProject)
                            {
                                <div class="video-badge">
                                    <i class="bi bi-check-circle-fill"></i> Added
                                </div>
                            }
                        </div>
                        <div class="video-info">
                            <h6 class="video-title">@video.Title</h6>
                            <div class="video-channel">@video.ChannelTitle</div>
                            <div class="video-stats">
                                <span><i class="bi bi-eye"></i> @FormatCount(video.ViewCount)</span>
                                <span><i class="bi bi-hand-thumbs-up"></i> @FormatCount(video.LikeCount)</span>
                                <span><i class="bi bi-calendar3"></i> @video.PublishedAt.ToString("MMM yyyy")</span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (selectedVideos.Count > 0)
            {
                <div class="selected-videos-bar">
                    <div>
                        <span class="badge bg-primary">@selectedVideos.Count selected</span>
                    </div>
                    <button class="btn btn-success" @onclick="AddSelectedVideosToProject" disabled="@isAddingVideos">
                        @if (isAddingVideos)
                        {
                            <span class="spinner-border spinner-border-sm" role="status"></span>
                        }
                        Add to Project
                    </button>
                </div>
            }
        }
    </div>
</div>

<style>
    .video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1rem;
        max-height: 600px;
        overflow-y: auto;
        padding-right: 0.5rem;
    }

    .video-card {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.2s ease;
    }

        .video-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .video-card.selected {
            border-color: #0d6efd;
            box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.25);
        }

        .video-card.in-project {
            opacity: 0.7;
            pointer-events: none;
        }

    .video-thumbnail {
        position: relative;
        width: 100%;
        height: 0;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        overflow: hidden;
    }

        .video-thumbnail img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .video-duration {
        position: absolute;
        bottom: 5px;
        right: 5px;
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 1px 4px;
        border-radius: 2px;
        font-size: 0.75rem;
    }

    .video-badge {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        background-color: rgba(25, 135, 84, 0.85);
        color: white;
        padding: 0.25rem;
        font-size: 0.8rem;
        text-align: center;
    }

    .video-info {
        padding: 0.75rem;
    }

    .video-title {
        margin-bottom: 0.25rem;
        line-height: 1.3;
        max-height: 2.6em;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .video-channel {
        font-size: 0.8rem;
        color: #6c757d;
        margin-bottom: 0.25rem;
    }

    .video-stats {
        display: flex;
        font-size: 0.75rem;
        color: #6c757d;
    }

        .video-stats span {
            margin-right: 0.75rem;
        }

    .selected-videos-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #f8f9fa;
        padding: 0.75rem;
        border-radius: 0.375rem;
        margin-top: 1rem;
    }

    /* Custom scrollbar for Chrome, Edge, and Safari */
    .video-grid::-webkit-scrollbar {
        width: 6px;
    }

    .video-grid::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    .video-grid::-webkit-scrollbar-thumb {
        background: #aaa;
        border-radius: 6px;
    }

        .video-grid::-webkit-scrollbar-thumb:hover {
            background: #888;
        }
</style>